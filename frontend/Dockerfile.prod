FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --only=production

# Copy built application
COPY .next ./.next
COPY public ./public
COPY next.config.js ./
# Copy source route files needed for App Router server-side rendering
COPY src/app/admin ./src/app/admin

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "run", "start"]

